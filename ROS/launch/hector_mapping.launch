<launch>
	
    <include file="$(find hector_mapping)/launch/mapping_default.launch" > 
        <arg name="base_frame" value="base_link"/>
        <arg name="pub_map_odom_transform" value="false"/>
        <arg name="scan_topic" value="scan"/>
        <arg name="odom_frame" value="odom" />
        <param name="pub_odometry" value="true" />
        
        
    </include>
    <node pkg="tf" type="static_transform_publisher" name="scanmatch_to_laser" args="0 0 0 0 0 0 scanmatcher_frame laser 100"/>
    <node pkg="tf" type="static_transform_publisher" name="laser_to_footprint" args="0 0 0 0 0 0 laser base_footprint 100"/>
    <node pkg="tf" type="static_transform_publisher" name="footprint_to_base" args="0 0 0 0 0 0 base_footprint base_link 100"/>
</launch>